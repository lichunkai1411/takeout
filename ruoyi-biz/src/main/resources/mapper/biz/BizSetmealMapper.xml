<mapper namespace="com.ruoyi.biz.mapper.BizSetmealMapper">
    
    <resultMap type="BizSetmeal" id="BizSetmealResult">
        <result property="setmealId"    column="setmeal_id"    />
        <result property="categoryId"    column="category_id"    />
        <result property="setmealName"    column="setmeal_name"    />
        <result property="setmealPrice"    column="setmeal_price"    />
        <result property="setmealImage"    column="setmeal_image"    />
        <result property="saleStatus"    column="sale_status"    />
