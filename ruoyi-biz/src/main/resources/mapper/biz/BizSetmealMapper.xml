    <delete id="deleteBizSetmealBySetmealId" parameterType="Long">
        delete from biz_setmeal where setmeal_id = #{setmealId}
    </delete>

    <delete id="deleteBizSetmealBySetmealIds" parameterType="String">
        delete from biz_setmeal where setmeal_id in 
        <foreach item="setmealId" collection="array" open="(" separator="," close=")">
            #{setmealId}
        </foreach>
    </delete>
